<div class="border-form-div">
  <h2><%= t 'devise.invitations.edit.header' %></h2>
  <% if resource.errors.present? %>
    <div class="alert alert-warning"><%= devise_error_messages! %></div>
  <% end %>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put}) do |f| %>
    <%= f.hidden_field :invitation_token %>

    <%= f.password_field :password, autofocus: true, placeholder: 'Senha' %>
    <%= f.password_field :password_confirmation, placeholder: 'Confirmação da Senha' %>

    <div></div>
    <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary' %>

  <% end %>
</div>